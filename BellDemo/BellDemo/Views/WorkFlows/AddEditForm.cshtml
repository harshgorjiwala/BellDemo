@model BellDemo.Data.WorkFlow

    
    <div class="form-group">
        <label asp-for="ServiceCategoryType" class="control-label"></label>
        @Html.DropDownListFor(a => a.ServiceCategoryTypeID, @Model.ServiceCategoryTypes, "", new { @class = "form-control", @style = "width: 100%;", required = "Select Category Type"  })
        @Html.ValidationMessageFor(a => a.ServiceCategoryTypeID, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="ServiceCategory" class="control-label"></label>
        @Html.DropDownListFor(a => a.ServiceCategoryId, @Model.ServiceCategories, "", new { @class = "form-control", @style = "width: 100%;", required = "Select Category" })
        @Html.ValidationMessageFor(a => a.ServiceCategoryId, "", new { @class = "text-danger" })
        <span asp-validation-for="ServiceCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkGiven" class="control-label"></label>
        <input asp-for="WorkGiven" class="form-control" style="width: 100%" required />
        <span asp-validation-for="WorkGiven" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" style="width: 100%" required />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" style="width: 100%" required />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

